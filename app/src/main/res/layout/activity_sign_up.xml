<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.SignUpActivity">

    <TextView
        android:id="@+id/signUp_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="이름"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/signUp_edt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="이름을 입력해주세요"
        android:textSize="20sp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/signUp_tv_name"
        app:layout_constraintStart_toStartOf="@+id/signUp_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/signUp_tv_name" />

    <TextView
        android:id="@+id/signUp_tv_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="깃허브 아이디"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/signUp_edt_name"
        app:layout_constraintStart_toStartOf="@+id/signUp_edt_name"
        app:layout_constraintTop_toBottomOf="@+id/signUp_edt_name" />

    <EditText
        android:id="@+id/signUp_edt_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ID를 입력해주세요"
        android:textSize="20sp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/signUp_tv_id"
        app:layout_constraintStart_toStartOf="@+id/signUp_tv_id"
        app:layout_constraintTop_toBottomOf="@+id/signUp_tv_id" />

    <TextView
        android:id="@+id/signUp_tv_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/signUp_edt_id"
        app:layout_constraintStart_toStartOf="@+id/signUp_edt_id"
        app:layout_constraintTop_toBottomOf="@+id/signUp_edt_id" />

    <EditText
        android:id="@+id/signUp_edt_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력해주세요"
        android:textSize="20sp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/signUp_tv_pw"
        app:layout_constraintStart_toStartOf="@+id/signUp_tv_pw"
        app:layout_constraintTop_toBottomOf="@+id/signUp_tv_pw" />

    <Button
        android:id="@+id/signUp_btn_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="SIGNUP"
        app:layout_constraintEnd_toEndOf="@+id/signUp_edt_pw"
        app:layout_constraintStart_toStartOf="@+id/signUp_edt_pw"
        app:layout_constraintTop_toBottomOf="@+id/signUp_edt_pw" />

</androidx.constraintlayout.widget.ConstraintLayout>